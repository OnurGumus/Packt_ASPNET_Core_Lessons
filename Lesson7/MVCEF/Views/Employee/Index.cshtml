
@model MVCEF.ViewModels.EmployeeAddViewModel



<div class="container">
    <br />
    <br/>
    <form asp-controller="Employee" asp-action="Index">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Name" bootstrap-validation class="form-control" />
            </div>
            <div class="col-sm-3 text-danger">
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Designation" class="col-sm-2 col-form-label"></label>

            <div class="col-sm-4">
                <input asp-for="Designation" bootstrap-validation class="form-control" />
            </div>
            <div class="col-sm-3 text-danger">
                <span asp-validation-for="Designation"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-4">
                <input asp-for="Salary" bootstrap-validation class="form-control" >
            </div>
            <div class="col-sm-3 text-danger">

                <span id="validationSalary" asp-validation-for="Salary"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">
                    Submit
                </button>
            </div>
        </div>

    </form>


</div>

<br /><br /> <br />

<b> List of employees:</b> <br />
<div>
    <table class="table table-bordered">
        <tr>
            <th> ID </th>
            <th> Name </th>
            <th> Designation </th>
            <th> Salary </th>
        </tr>
        @foreach (var employee in Model.EmployeesList)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.Name</td>
                <td>@employee.Designation</td>
                <td>@employee.Salary</td>
            </tr>
        }
    </table>
</div>
